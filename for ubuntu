print(f'Razon de Rendimiento del Activo de Operacion: {razon_de_rendimineto_del_activo_de_operacion}')

razon_de_gastos_en_relacion_con_las_ventas = gastos_operativos_totales / ventas #ventas deberian ser netas
print(f'Razon de Gastos en Relacion con las Ventas: {razon_de_gastos_en_relacion_con_las_ventas} ')

razon_de_costo_de_financiamiento_a_utilidad_neta = gastos_por_intereses / ventas #ventas deberian ser netas
print(f'Razon de Costo de Financiamiento a Utilidad Neta: ')

tasa_de_impuestos = int(input('Tasa de Impuestos : '))

rotacion_de_activos_totales = ventas / total_activo

#razon_de_rendimineto_del_activo_total deberia incluir ventas netas en lugar de solo ventas
razon_de_rendimineto_del_activo_total = ((ventas  + gastos_por_intereses) * (1 - tasa_de_impuestos))/ rotacion_de_activos_totales


print('Razones Financieras de Formulas de Velocidad')


rotacion_de_inventario = ventas/inventario

rotacion_de_los_inventarios = costo_de_los_bienes_vendidos / rotacion_de_inventario

dias_del_año = 360

rotacion_de_inventario_base_dias = dias_del_año / rotacion_de_inventario

promedio_de_ventas_diarias_a_credito = clientes / dias_del_año

rotacion_de_cuentas_por_cobrar_a_clientes = ventas / promedio_de_ventas_diarias_a_credito  #las ventas deberian ser netas

tiempo_en_dias_necesario_para_el_cobro_de_facturas = dias_del_año / rotacion_de_cuentas_por_cobrar_a_clientes

promedio_del_activo_circulante = total_activo_circulante / dias_del_año

rotacion_del_activo_circulante = costo_de_los_bienes_vendidos / promedio_del_activo_circulante

rotacion_de_cuentas_por_pagar = proveedores / proveedores

rotacion_de_cuentas_por_pagar_base_dias = dias_del_año / rotacion_de_cuentas_por_pagar

rotacion_de_capital_de_trabajo =  ventas / capital_de_trabajo

capital_contable_tangible = total_activo_circulante + activo_fijo_neto - total_pasivo_no_circulante #verificar esta razon

razon_de_capital_tangible = ventas / capital_contable #ventas deberian ser ventas netas y capital capital contable tangible

# compras_brutas

rotacion_de_proveedores = compras / proveedores #falta cambiar la cuenta compras(por compras brutas)

rotacion_de_proveedores_2 = ventas / capital_de_trabajo


